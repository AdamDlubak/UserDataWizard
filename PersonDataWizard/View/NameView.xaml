<UserControl x:Class="PersonDataWizard.View.NameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <TextBlock Style="{StaticResource PageDescription}">
            Please enter your name. This field is required.
            </TextBlock>
        <Label Style="{StaticResource PageInputLabel}" Content="Your Name:"/>
        <TextBox Style="{StaticResource PageInput}" x:Name="NumberTextBox" Text="{Binding UserName, Mode=TwoWay}" />
<!--                 KeyUp="NumberTextBox_KeyUp"-->
<!--                 Loaded="NumberTextBox_Loaded"-->
        <Label Style="{StaticResource PageErrorLabel}" Content="*This field cannot be empty!" />

    </StackPanel>
</UserControl>
