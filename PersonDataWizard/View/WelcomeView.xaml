<UserControl x:Class="PersonDataWizard.View.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Loaded="Page_Loaded">
        <Label Style="{StaticResource PageInputLabel}" Content="We want to get some information about you..."/>

        <TextBlock Style="{StaticResource PageDescription}" TextWrapping="Wrap">
            Before the next step, we would like to ask You for some basic information about the user.
        </TextBlock>

    </StackPanel>
</UserControl>
