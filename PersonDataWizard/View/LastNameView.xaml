<UserControl x:Class="PersonDataWizard.View.LastNameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Loaded="Page_Loaded">
        <TextBlock Style="{StaticResource PageDescription}">
            Please enter your surname. This field is required.
        </TextBlock>
        <Label Style="{StaticResource PageInputLabel}" Content="Your Surname:"/>
        <TextBox Style="{StaticResource PageInput}" x:Name="LastNameTextBox" Text="{Binding UserInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <!--                 KeyUp="NumberTextBox_KeyUp"-->
        <!--                 Loaded="NumberTextBox_Loaded"-->
        <Label Style="{StaticResource PageErrorLabel}" Content="*This field cannot be empty!" />

    </StackPanel>
</UserControl>
