<UserControl x:Class="PersonDataWizard.View.FirstNameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <StackPanel Loaded="Page_Loaded">
        <TextBlock  Style="{StaticResource PageDescription}">
            Please enter your name. This field is required.
            </TextBlock>
        <Label Style="{StaticResource PageInputLabel}" Content="Your Name:"/>
        <TextBox Style="{StaticResource PageInput}" x:Name="FirstNameTextBox" Text="{Binding UserInfo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
<!--                 KeyUp="NumberTextBox_KeyUp"-->
<!--                 Loaded="NumberTextBox_Loaded"-->
        <Label Style="{StaticResource PageErrorLabel}" 
            Content="{ Binding ErrorDescription }" Visibility="{ Binding IsCorrect }"/>

    </StackPanel>
</UserControl>
